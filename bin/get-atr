#!/usr/bin/env python3
from smartcard.System import readers
import sys

for reader in readers():
    try:
        con = reader.createConnection()
        break
    except:
        continue

con.connect()
atr = con.getATR()
atr = bytes(atr).hex().upper()
try:
    print(sys.argv[1], end=': ')
except:
    pass
print(atr)
